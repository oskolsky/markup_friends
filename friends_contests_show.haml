                  %h1.block_h_t Задача конкурса
                .block_b
                  .grid
                    - 1.upto(3) do
                      .grid-i.__grid-3>
                        = Haml::Engine.new(File.read('views/common/friends/_item_app.haml')).render
                      
              .block.p-t_2.p-b_3
                .block_h
                  .grid
                    .grid-i.__grid-6.va-m>
                      .tx.__left
                        %h1.block_h_t Присланные работы
                    .grid-i.__grid-3.va-m>
                      .tx.__right
                        %a.form-el.__btn.__small.__major{href: "#"} Все (137)
                .block_b
                  .grid
                    - 1.upto(3) do
                      .grid-i.__grid-3>
                        = Haml::Engine.new(File.read('views/common/friends/_item_review.haml')).render

